<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="game">
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="night">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="night_button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="night_imagebutton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="animationTransition">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="radio">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="button_level">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

</resources>
